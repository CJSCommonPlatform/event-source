<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="event-store-011" author="TechPod"
               logicalFilePath="011-add-event-sequence-table.xml">

        <createSequence sequenceName="event_sequence_number_seq"/>

        <createTable tableName="event_sequence">
            <column name="event_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sequence_number" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="previous" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="next" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="event_sequence"
                             columnNames="event_id"
                             constraintName="event_Id_unique"/>

        <createIndex indexName="idx_sequence_number"
                     tableName="event_sequence"
                     unique="true">
            <column name="sequence_number" type="BIGINT"/>
        </createIndex>

        <createIndex indexName="idx_previous"
                     tableName="event_sequence"
                     unique="true">
            <column name="previous" type="BIGINT"/>
        </createIndex>
        <createIndex indexName="idx_next"
                     tableName="event_sequence"
                     unique="true">
            <column name="next" type="BIGINT"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="event_sequence" indexName="idx_sequence_number"/>
            <dropIndex tableName="event_sequence" indexName="idx_previous"/>
            <dropIndex tableName="event_sequence" indexName="idx_next"/>

            <dropUniqueConstraint tableName="event_sequence"/>

            <dropTable tableName="event_sequence"/>

            <dropSequence sequenceName="event_sequence_number_seq"/>
        </rollback>

    </changeSet>
</databaseChangeLog>
